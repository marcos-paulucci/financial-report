{
  "name": "streaming-reports",
  "version": "1.0.0",
  "description": "Application that builds the test project at https://github.com/Primephonic/backend-engineer-assignment/blob/master/README.md",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint  && npm run copy-static-assets",
    "build-and-start": "npm run build && npm start",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "NODE_ENV=test jest --forceExit --coverage --verbose --detectOpenHandles",
    "build-and-test": "npm run build && npm run test",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.0",
    "acorn": "^6.3.0",
    "async": "^3.0.1",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "config": "^3.2.2",
    "csv-parser": "^2.3.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
